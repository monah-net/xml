<h_section id="header" width="100%"  height="50px" style="header-section">
    <h_section id="axiom_logo" align="MIDDLE_LEFT">
        <static_label id="logo_pic" image="logo_axiomsl.svg" style="original-size"/>
    </h_section>
    <h_section id="h1_title" width="100%" align="MIDDLE_LEFT" >
        <page_title id="page_title_label">
            <data_source project="FCRS_UI" branch="current" source="UI:cab_page_setup" type="DataSource"/>
            <unique_id name="page_id"/>
            <title name="page_title"/>
        </page_title>
    </h_section>
    <h_section id="user_info" align="MIDDLE_RIGHT" width="100%">
        <notification_count_button id="notifications" tooltip="Notifications">
            <data_source project="FATCA_CIC" branch="2019_v03" source="notifications" type="DataModel"/>
            <filter>
                <filter_value>
                    <string_value value="1"/>
                </filter_value>
                <filter_mapping>
                    <filter_on node="root" name="visible"/>
                </filter_mapping>
            </filter>
            <filter>
                <filter_value>
                    <string_value value="false"/>
                </filter_value>
                <filter_mapping>
                    <filter_on node="root" name="read_field"/>
                </filter_mapping>
            </filter>
            <open_popup_window height="50%" width="30%">
                <grid id="notifications" listened_data="true">
                    <data_source project="FATCA_CIC" branch="2019_v03" source="notifications" type="DataModel"/>
                    <filter>
                        <filter_value>
                            <string_value value="1"/>
                        </filter_value>
                        <filter_mapping>
                            <filter_on node="root" name="visible"/>
                        </filter_mapping>
                    </filter>
                    <filter>
                        <filter_value>
                            <string_value value="false"/>
                        </filter_value>
                        <filter_mapping>
                            <filter_on node="root" name="read_field"/>
                        </filter_mapping>
                    </filter>
                    <column id="c1" title="Notification Date">
                        <component>
                            <grid_label_component alignment="CENTER">
                                <dynamic_caption format="MM/dd/yyyy hh:mm:ss">
                                    <field_value node="root" field="event_time"/>
                                </dynamic_caption>
                            </grid_label_component>
                        </component>
                    </column>
                    <column id="c2" title="Created by">
                        <component>
                            <grid_label_component alignment="CENTER">
                                <dynamic_caption>
                                    <field_value node="root" field="user_name"/>
                                </dynamic_caption>
                            </grid_label_component>
                        </component>
                    </column>
                    <column id="c3" title="Message">
                        <component>
                            <grid_label_component>
                                <dynamic_caption>
                                    <field_value node="root" field="message"/>
                                </dynamic_caption>
                            </grid_label_component>
                        </component>
                    </column>
                    <column id="c4" title="Send to Archive">
                        <component>
                            <grid_button_component>
                                <static_caption icon="archive.svg"/>
                                <data_source_update>
                                    <source_path project="FATCA_CIC" branch="2019_v03" name="notifications"/>
                                    <fields>
                                        <field name="read_field">
                                            <string_value value="true"/>
                                        </field>
                                    </fields>
                                    <keys>
                                        <field name="event_id">
                                            <field_value node="root" field="event_id"/>
                                        </field>
                                    </keys>
                                </data_source_update>
                                <composite_enable_condition/>
                            </grid_button_component>
                        </component>
                    </column>
                </grid>
            </open_popup_window>
            <composite_enable_condition/>
            <composite_visibility_condition/>
        </notification_count_button>
        <login_label id="user_login" image="user_box.svg" icon_alignment="LEFT"/>
        <copy_url_button id="curl" width="45px" icon_alignment="LEFT" image="link.svg" tooltip="Copy Link">
            <composite_enable_condition/>
            <composite_visibility_condition/>
        </copy_url_button>
        <button id="logout" image="logout.svg" icon_alignment="LEFT" tooltip="Logout">
            <logout_procedure/>
            <composite_enable_condition/>
            <composite_visibility_condition/>
        </button>
    </h_section>
</h_section>